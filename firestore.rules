rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Timestamp history collection - public read/write for now
    // You can restrict this later based on your authentication needs
    match /timestamp_history/{documentId} {
      // Allow anyone to read and write (for public access)
      allow read, write: if true;
      
      // For authenticated users only, use:
      // allow read, write: if request.auth != null;
      
      // For user-specific data (if you add userId field later):
      // allow read, write: if request.auth != null && 
      //   (request.auth.uid == resource.data.userId || 
      //    request.auth.uid == request.resource.data.userId);
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

